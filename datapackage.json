{
	"profile": "tabular-data-package",
	"version": "0.1.0",
	"resources": [
		{
			"profile": "tabular-data-resource",
			"name": "spikes",
			"path": "spikes.csv",
			"description": "List of spikes",
			"format": "csv",
			"mediatype": "text/csv",
			"schema": {
				"fields": [
					{
						"name": "time",
						"title": "Time of spike",
						"format": "number"
					},
					{
						"name": "spike-train-index",
						"title": "Index of assigned spike train",
						"format": "integer"
					}
				],
				"foreignKeys": [
					{
						"fields": "spike-train-index",
						"reference": {
							"resource": "spike-trains",
							"fields": "spike-train-index"
						}
					}
				]
			}
		},
		{
			"profile": "tabular-data-resource",
			"name": "spike-trains",
			"path": "spike-trains.csv",
			"description": "List of spike trains",
			"format": "csv",
			"mediatype": "text/csv",
			"schema": {
				"fields": [
					{
						"name": "spike-train-index",
						"title": "Index of spike train",
						"format": "integer"
					},
					{
						"name": "name",
						"title": "Name assigned to spike train",
						"format": "string"
					},
					{
						"name": "epos",
						"title": "Position of recording electrode in MEA",
						"format": "array"
					},
					{
						"name": "sCount",
						"title": "Number of spikes in spike train",
						"format": "integer"
					}
				]
			}
		}
	]
}
			